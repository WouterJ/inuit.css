/*------------------------------------*\
    $WIDTHS
\*------------------------------------*/
/**
 * Sizes in human readable format. These are used in conjunction with other
 * objects and abstractions found in inuit.css, most commonly the grid system
 * and faux flexbox.
 */

/**
 * Whole
 */
.one-whole          { width:100%; }


/**
 * Halves
 */
.one-half           { @include column(2, 1); }


/**
 * Thirds
 */
.one-third          { @include column(3, 1); }
.two-thirds         { @include columns(3, 2); }


/**
 * Quarters
 */
  .one-quarter      { @include column(4, 1); }
  .two-quarters     { @extend .one-half; }
.three-quarters     { @include column(4, 3); }


/**
 * Fifths
 */
  .one-fifth        { @include column(5, 1); }
  .two-fifths       { @include column(5, 2); }
.three-fifths       { @include column(5, 3); }
 .four-fifths       { @include column(5, 4); }


/**
 * Sixths
 */
  .one-sixth        { @include column(6, 1); }
  .two-sixths       { @extend .one-third; }
.three-sixths       { @extend .one-half; }
 .four-sixths       { @extend .two-thirds; }
 .five-sixths       { @include column(6, 5); }


/**
 * Eighths
 */
  .one-eighth       { @include column(8, 1); }
  .two-eighths      { @extend .one-quarter; }
.three-eighths      { @include column(8, 3); }
 .four-eighths      { @extend .one-half; }
 .five-eighths      { @include column(8, 5); }
  .six-eighths      { @extend .three-quarters; }
.seven-eighths      { @include column(8, 7); }


/**
 * Tenths
 */
  .one-tenth        { @include column(10, 1); }
  .two-tenths       { @extend .one-fifth; }
.three-tenths       { @include column(10, 3); }
 .four-tenths       { @extend .two-fifths; }
 .five-tenths       { @extend .one-half; }
  .six-tenths       { @extend .three-fifths; }
.seven-tenths       { @include column(10, 7); }
.eight-tenths       { @extend .four-fifths; }
 .nine-tenths       { @include column(10, 9); }


/**
 * Twelfths
 */
   .one-twelfth     { @include column(12, 1); }
   .two-twelfths    { @extend .one-sixth; }
 .three-twelfths    { @extend .one-quarter; }
  .four-twelfths    { @extend .one-third; }
  .five-twelfths    { @include column(12, 5); }
   .six-twelfths    { @extend .one-half; }
 .seven-twelfths    { @include column(12, 7); }
 .eight-twelfths    { @extend .two-thirds; }
  .nine-twelfths    { @extend .three-quarters; }
   .ten-twelfths    { @extend .five-sixths; }
.eleven-twelfths    { @include column(12, 11); }
